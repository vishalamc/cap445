        #include <iostream>
    using namespace std;

    int main()
    {
    noteligible:

          cout<<"Enter your age:\n";
          int age;
          cin>>age;
          if (age < 18){
                 cout<<"You are not eligible to vote!\n";
                  goto noteligible;
          }
          else
          {
                  cout<<"You are eligible to vote!";
          }
    }

